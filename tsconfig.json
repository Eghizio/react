{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "outDir": "dist/types"
  },
  "exclude": [
    "**/__tests__",
    "**/*.stories.tsx",
    "docs"
  ]
}
